<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.6.0" author="mcurchi">
        <createSequence sequenceName="offermedia_seq" incrementBy="1" startValue="1"/>
    </changeSet>

    <changeSet id="1.6.1" author="mcurchi">
        <createTable tableName="offermedia">
            <column name="id" type="BIGINT" defaultValueSequenceNext="offermedia_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="offer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="path" type="VARCHAR(512)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="created" type="timestamp with time zone" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="updated" type="timestamp with time zone" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="offermedia"
                                 baseColumnNames="offer_id"
                                 constraintName="fk_offermedia_offer"
                                 referencedTableName="offers"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
        />
    </changeSet>
</databaseChangeLog>
