<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.6.0" author="mcurchi">
        <createSequence sequenceName="offerimage_seq" incrementBy="1" startValue="1"/>
    </changeSet>

    <changeSet id="1.6.1" author="mcurchi">
        <createTable tableName="offerimage">
            <column name="id" type="BIGINT" defaultValueSequenceNext="offerimage_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="offer_id" type="BIGINT"/>

            <column name="name" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>

            <column name="type" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>

            <column name="pic_byte" type="bytea"/>

            <column name="created" type="timestamp with time zone" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="updated" type="timestamp with time zone" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="offerimage"
                                 baseColumnNames="offer_id"
                                 constraintName="fk_offerimage_offer"
                                 referencedTableName="offers"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
        />
    </changeSet>
</databaseChangeLog>
